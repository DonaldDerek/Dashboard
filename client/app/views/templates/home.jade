.container
  .row-fluid#users
    each user in users
      .user-container
        img(src="http://www.gravatar.com/avatar/#{user.gravatar_id}?s=400")
        a(href="#{user.html_url}")
          if user.name
            h4 #{user.name}
          else
            h4 #{user.login}
        p ( #{user.login} )
        .blog
          if user.blog
            a(href="#{user.blog") #{user.blog}
          else
            p No blog :(
        .social
          .entry
            p Followers
            p #{user.followers}
          .entry
            p Stars
            p #{user.stars}
          .entry
            p Following
            p #{user.following}
